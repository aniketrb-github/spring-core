<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="questionBean" class="org.javabrains.entities.Question">
	
		<constructor-arg value="123"/>
		<constructor-arg value="Name any 3 best Programming books for Java."/>
		
		<constructor-arg>
			<map>
				<entry key="Head-First Java" value="Kathy Seira"></entry>
				<entry key="Complete Reference Java" value="Lujevic Thomas"></entry>
				<entry key="Thinking in Java" value="Bruce Eckel"></entry>
			</map>
		</constructor-arg>
	</bean>
	
</beans>